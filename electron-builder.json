{
    "appId": "com.electron.app",
    "directories": {
        "output": "dist"
    },

    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "Example App"
    },
    "win": {
        "target": "nsis",
        "icon": "src/main/static/icon.ico"
    },
    "linux":  {
        "target": ["snap"],
        "icon": "src/main/static/icon.png"
    },
    "files": [
        {
            "from": "build/main",
            "to": "main",
            "filter": ["**/*"]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": ["**/*"]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": ["**/*"]
        },
	"!build",
	"!dist",
	"!scripts"
    ],
    "extraResources": [
        {
            "from": "src/main/python",
            "to": "python"
        }
    ]
}
